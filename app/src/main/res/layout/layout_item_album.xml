<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgAlbum"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/txtTenAlBum"
        app:layout_constraintBottom_toTopOf="@+id/txtTenCaSiAlbum"
        app:layout_constraintLeft_toLeftOf="@id/imgAlbum"
        android:text="Mùa xuân chim én đưa thưa, thiều quan chín trục"
        android:textStyle="bold"
        android:layout_marginLeft="7dp"
        android:textColor="#000"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtTenCaSiAlbum"
        app:layout_constraintLeft_toLeftOf="@id/imgAlbum"
        app:layout_constraintBottom_toBottomOf="@id/imgAlbum"
        android:layout_width="200dp"
        android:maxLines="1"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:text="Trịnh Thanh Bình"
        android:textStyle="italic"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>