<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgChuDe"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/txtTenChuDe"
        android:text="The loai khong ten"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxWidth="180dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@id/imgChuDe"
        app:layout_constraintTop_toTopOf="@id/imgChuDe"
        app:layout_constraintRight_toRightOf="@id/imgChuDe"
        app:layout_constraintBottom_toBottomOf="@id/imgChuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>