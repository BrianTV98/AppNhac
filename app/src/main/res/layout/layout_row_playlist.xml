<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_item"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgBackgroudPlayList"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:src="@drawable/test"
        android:background="@android:color/white"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:alpha="0.5"
        android:background="@drawable/custom_banner" />

    <ImageView
        android:id="@+id/imgPlayList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgBackgroudPlayList"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgBackgroudPlayList"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/imgPlayList"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Bài Hát được Yêu thích"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>