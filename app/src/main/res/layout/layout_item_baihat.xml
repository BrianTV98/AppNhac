<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView
            android:id="@+id/txtMaBH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgBH"
            app:layout_constraintBottom_toBottomOf="@id/imgBH"/>

    <TextView
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="@id/txtMaBH"
            app:layout_constraintRight_toRightOf="@id/txtMaBH"
            app:layout_constraintTop_toBottomOf="@id/imgBH" />

    <ImageView
            android:id="@+id/imgBH"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txtMaBH"
            android:layout_margin="10dp"
            android:src="@color/colorAccent"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    <TextView
            android:id="@+id/txtTenBH"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgBH"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/txtTenCaSiBH"
            app:layout_constraintTop_toBottomOf="@id/txtTenBH"
            app:layout_constraintLeft_toRightOf="@id/imgBH"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    <ImageButton
            android:id="@+id/imgLikeBH"
            android:src="@drawable/ic_like"
            android:background="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgBH"
            app:layout_constraintBottom_toBottomOf="@id/imgBH"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>